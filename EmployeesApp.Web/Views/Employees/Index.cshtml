@model IndexVM

@{
    ViewBag.Title = "Employees List";
}

<ul>
    @foreach (var employee in Model.Employees)
    {
        <li>
            <a style="@(employee.ShowAsHighlighted ? "color:red;" : "")" asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">@employee.Name</a>
        </li>
    }
</ul>